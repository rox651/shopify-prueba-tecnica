{% schema %}
{
  "name": "Discount Collage",
  "tag": "section",
  "class": "section discount-collage-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Best Deals"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "select",
      "id": "products_to_show",
      "label": "Products to show",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        }
      ],
      "default": "3"
    }
  ],
  "presets": [
    {
      "name": "Discount Collage",
      "category": "Products"
    }
  ]
}
{% endschema %}

<div class="custom-discount-products">
  {% if section.settings.heading != blank %}
    <h2 class="custom-discount-products__heading">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  {% assign selected_collection = section.settings.collection %}
  {%- assign products_to_show = section.settings.products_to_show | times: 1 -%}
  {%- assign products_shown_count = 0 -%}
  {%- assign found_discounted_product = false -%}

  <div class="custom-discount-products__grid">
    {%- for product in selected_collection.products -%}
      {%- if product.compare_at_price > product.price -%}
        {%- if products_shown_count < products_to_show -%}
          {%- assign products_shown_count = products_shown_count | plus: 1 -%}
          {%- assign found_discounted_product = true -%}
          <div class="product-card product-card--{{ products_shown_count }}">
            <a href="{{ product.url }}" class="product-card__link">
              {%- if product.featured_image -%}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.title | escape }}"
                  class="product-card__image"
                  width="800"
                  height="800"
                >
              {%- endif -%}
              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                <div class="product-card__price-wrapper">
                  <p class="product-card__price sale">{{ product.price | money }}</p>
                  <p class="product-card__price compare-at">{{ product.compare_at_price | money }}</p>
                </div>
              </div>
            </a>
          </div>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  </div>

  {%- if found_discounted_product == false -%}
    <p class="custom-discount-products__empty">No se encontraron productos en oferta en la colecci√≥n seleccionada.</p>
  {%- endif -%}
</div>

<style>
  .custom-discount-products {
    padding: 2rem;
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .custom-discount-products__heading {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
  }

  .custom-discount-products__grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(5, 1fr);
    gap: 1.5rem;
    height: 75vh;
    max-height: 800px;
  }

  .product-card--1 {
    grid-column: 1 / span 3;
    grid-row: 1 / span 5;
  }

  .product-card--2 {
    grid-column: 4 / span 2;
    grid-row: 1 / span 2;
  }

  .product-card--3 {
    grid-column: 4 / span 2;
    grid-row: 3 / span 3;
  }

  .custom-discount-products .product-card {
    background: #fff;
    border: 1px solid #e1e1e1;
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
    border-radius: 12px;
  }

  .custom-discount-products .product-card__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
  }

  .custom-discount-products .product-card:hover .product-card__image {
    transform: scale(1.05);
  }

  .custom-discount-products .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease-out;
  }

  .custom-discount-products .product-card__info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
    color: #fff;
    text-align: center;
  }

  .custom-discount-products .product-card__title {
    font-size: 2rem;
    color: #5633ff;
    font-weight: 600;
    background: #fff;
    max-width: max-content;
    margin: 0 auto;
    padding: 3px 10px;
    border-radius: 50px;
  }
  .custom-discount-products .product-card__price-wrapper {
    display: flex;
    justify-content: center;
    align-items: baseline;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .custom-discount-products .product-card__price.sale {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    margin: 0;
  }

  .custom-discount-products .product-card__price.compare-at {
    color: #fff;
    opacity: 0.7;
    text-decoration: line-through;
    font-size: 1.5rem;
  }

  @media screen and (max-width: 768px) {
    .custom-discount-products__grid {
      display: flex;
      flex-direction: column;
      height: auto;
      max-height: auto;
    }

    .custom-discount-products .product-card {
      min-height: 400px;
      width: 100%;
    }
  }
</style>
