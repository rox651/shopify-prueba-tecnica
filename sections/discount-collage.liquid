
{% schema %}
{
  "name": "Collage de Descuentos",
  "tag": "section",
  "class": "section discount-collage-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título de la sección",
      "default": "Nuestras mejores ofertas"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Colección"
    },
    {
      "type": "image_picker",
      "id": "discount_badge",
      "label": "Insignia de descuento"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Cantidad de productos a mostrar",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Collage de Descuentos",
      "category": "Productos"
    }
  ]
}
{% endschema %}

<div class="custom-featured-products">
  {% if section.settings.heading != blank %}
    <h2 class="custom-featured-products__heading">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  {% assign selected_collection = section.settings.collection %}
  {% assign discounted_products = "" | split: "" %}

  {% if selected_collection != nil and selected_collection.products_count > 0 %}
    {% for product in selected_collection.products %}
      {% if product.compare_at_price > product.price %}
        {% assign discounted_products = discounted_products | push: product %}
      {% endif %}
    {% endfor %}
  {% endif %}

  {% if discounted_products.size > 0 %}
    <div class="custom-featured-products__grid">
      {% for product in discounted_products limit: section.settings.products_to_show %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-card__link">
            {% if section.settings.discount_badge != blank %}
              <img src="{{ section.settings.discount_badge | image_url: width: 80 }}" class="product-card__badge" alt="Insignia de descuento">
            {% endif %}
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 500 }}"
                alt="{{ product.title | escape }}"
                class="product-card__image"
              />
            {% endif %}
            <h3 class="product-card__title">{{ product.title }}</h3>
            <div class="product-card__price-wrapper">
              <p class="product-card__price sale">{{ product.price | money }}</p>
              <p class="product-card__price compare-at">{{ product.compare_at_price | money }}</p>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p class="custom-featured-products__empty">No se encontraron productos en oferta en la colección seleccionada.</p>
  {% endif %}
</div>

<style>
  .custom-featured-products {
    padding: 2rem;
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .custom-featured-products__heading {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
  }

  .custom-featured-products__grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .product-card {
    background: #fff;
    border: 1px solid #e1e1e1;
    padding: 1rem;
    text-align: center;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
    position: relative; 
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  }

  .product-card__badge {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 10;
    width: 50px; /* Tamaño ajustable */
    height: auto;
  }

  .product-card__image {
    max-width: 100%;
    height: auto;
    margin-bottom: 0.75rem;
    object-fit: cover;
  }

  .product-card__title {
    font-size: 2rem;
    margin: 0.5rem 0;
    color: #333;
    font-weight: 600;
    text-decoration:none;
  }

  .product-card__price-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .product-card__price {
    font-size: 1.5rem;
    color: #666;
    font-weight:500;
    text-decoration:none;
  }
  
  .product-card__price.sale {
    color: #c00;
    font-weight: 700;
  }

  .product-card__price.compare-at {
    text-decoration: line-through;
    color: #999;
    font-size: 1.2rem;
  }

  .custom-featured-products__empty {
    text-align: center;
    color: #999;
    font-style: italic;
  }
</style> 