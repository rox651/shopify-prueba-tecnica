{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "section custom-featured-products-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Products"
    }
  ]
}
{% endschema %}

<div class="custom-featured-products">
  {% if section.settings.heading != blank %}
    <h2 class="custom-featured-products__heading">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  {% assign selected_collection = section.settings.collection %}

  {% if selected_collection != null and selected_collection.products_count > 0 %}
    <div class="custom-featured-products__grid">
      {% for product in selected_collection.products limit: section.settings.products_to_show %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-card__link">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 500 }}"
                alt="{{ product.title | escape }}"
                class="product-card__image"
                width="500"
                height="500"
              >
            {% endif %}
            <h3 class="product-card__title">{{ product.title }}</h3>
            {% if product.compare_at_price > product.price %}
              <div class="product-card__price-wrapper">
                <p class="product-card__price sale">{{ product.price | money }}</p>
                <p class="product-card__price compare-at">{{ product.compare_at_price | money }}</p>
              </div>
            {% else %}
              <p class="product-card__price">{{ product.price | money }}</p>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    {% if section.settings.collection == blank %}
      <p class="custom-featured-products__empty">Please select a collection to display its products.</p>
    {% else %}
      <p class="custom-featured-products__empty">
        The collection '{{ section.settings.collection.title }}' has no products. Please add products to this collection
        or select a different one.
      </p>
    {% endif %}
  {% endif %}
</div>

<style>
  .custom-featured-products {
    padding: 2rem;
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .custom-featured-products__heading {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
  }

  .custom-featured-products__grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .custom-featured-products .product-card {
    overflow: hidden;
    background: #fff;
    border: 1px solid #e1e1e1;
    padding: 1rem;
    text-align: center;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
  }

  .custom-featured-products .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  }

  .custom-featured-products .product-card__image {
    max-width: 100%;
    height: auto;
    margin-bottom: 0.75rem;
    object-fit: cover;
    transition: transform 0.5 ease;
  }

  .custom-featured-products .product-card:hover .product-card__image {
    transform: rotate(-7deg);
  }

  .custom-featured-products .product-card__title {
    font-size: 2rem;
    margin: 0.5rem 0;
    color: #333;
    font-weight: 600;
    text-decoration: none;
  }

  .custom-featured-products .product-card__price {
    font-size: 1.5rem;
    color: #666;
    font-weight: 500;
    text-decoration: none;
  }

  .custom-featured-products .product-card__price-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .custom-featured-products .product-card__price.sale {
    color: #c00;
    font-weight: 700;
  }

  .custom-featured-products .product-card__price.compare-at {
    text-decoration: line-through;
    color: #999;
    font-size: 1.2rem;
  }

  .custom-featured-products__empty {
    text-align: center;
    color: #999;
    font-style: italic;
  }
</style>
