{% schema %}
{
  "name": "Custom featured products",
  "tag": "section",
  "class": "section custom-featured-products-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section title",
      "default": "Nuestros productos destacados"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Cantidad de productos a mostrar",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Custom featured products",
      "category": "Productos"
    }
  ]
}
{% endschema %}

<div class="custom-featured-products">
  {% if section.settings.heading != blank %}
    <h2 class="custom-featured-products__heading">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  {% assign selected_collection = section.settings.collection %}

  {% if selected_collection != nil and selected_collection.products_count > 0 %}
    <div class="custom-featured-products__grid">
      {% assign products = selected_collection.products | slice: 0, section.settings.products_to_show %}
      {% for product in products %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-card__link">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 500 }}"
                alt="{{ product.title | escape }}"
                class="product-card__image"
              />
            {% endif %}
            <h3 class="product-card__title">{{ product.title }}</h3>
            <p class="product-card__price">{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p class="custom-featured-products__empty">Selecciona una colección válida con productos.</p>
  {% endif %}
</div>

<style>
  .custom-featured-products {
    padding: 2rem;
    background-color: #f9f9f9;
  }

  .custom-featured-products__heading {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
  }

  .custom-featured-products__grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .product-card {
    background: #fff;
    border: 1px solid #e1e1e1;
    padding: 1rem;
    text-align: center;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  }

  .product-card__image {
    max-width: 100%;
    height: auto;
    margin-bottom: 0.75rem;
    object-fit: cover;
  }

  .product-card__title {
    font-size: 1.1rem;
    margin: 0.5rem 0;
    color: #333;
    font-weight: 600;
  }

  .product-card__price {
    font-size: 1rem;
    color: #666;
  }

  .custom-featured-products__empty {
    text-align: center;
    color: #999;
    font-style: italic;
  }
</style>
